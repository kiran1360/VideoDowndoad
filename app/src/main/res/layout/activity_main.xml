<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/getReelLink"
        android:layout_width="0dp"
        android:layout_height="50sp"
        android:ems="10"
        android:textStyle="bold"
     android:textColorHint="#C51162"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_marginRight="30dp"
        android:paddingStart="20dp"
        android:background="@drawable/edit"
        android:inputType="textPersonName"
       android:hint="Paste URL"
        android:elevation="90dp"
        app:layout_constraintEnd_toStartOf="@+id/getReel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/getReel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Paste"
        android:elevation="90dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/btn"
        app:layout_constraintBottom_toBottomOf="@+id/getReelLink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/getReelLink"
        app:layout_constraintVertical_bias="1.0" />

    <VideoView
        android:id="@+id/pass"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/downloadReel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getReelLink"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/downloadReel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="download"
        android:layout_marginBottom="8dp"
        android:elevation="90dp"
        android:background="@drawable/tbt"
      android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>